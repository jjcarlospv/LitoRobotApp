<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnDemo"
                android:layout_width="@dimen/imagebutton_size_normal"
                android:layout_height="@dimen/imagebutton_size_normal"
                android:src="@mipmap/ic_demo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnDriving"
                android:layout_width="@dimen/imagebutton_size_normal"
                android:layout_height="@dimen/imagebutton_size_normal"
                android:src="@mipmap/ic_manejar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnSmallProgram"
                android:layout_width="@dimen/imagebutton_size_normal"
                android:layout_height="@dimen/imagebutton_size_normal"
                android:src="@mipmap/ic_small_prog"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnBigProgram"
                android:layout_width="@dimen/imagebutton_size_normal"
                android:layout_height="@dimen/imagebutton_size_normal"
                android:src="@mipmap/ic_big_prog"/>

        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listViewPieces"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btnTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Probando touch"/>


    </LinearLayout>

</LinearLayout>
